{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "permissions": {
    "deny": [
      "Bash(su *)",
      "Bash(sudo *)",
      "Edit(appdata)",
      "Edit(~/.cert)",
      "Edit(~/data)",
      "Edit(~/Desktop)",
      "Edit(~/Documents)",
      "Edit(~/Downloads)",
      "Edit(.envrc)",
      "Edit(//etc/NetworkManager)",
      "Edit(//etc/ssh)",
      "Edit(flake.lock)",
      "Edit(flake.nix)",
      "Edit(Gemfile)",
      "Edit(Gemfile.lock)",
      "Edit(~/.gnupg)",
      "Edit(~/.kde/share/apps/networkmanagement)",
      "Edit(~/Library)",
      "Edit(~/.local/share/certs)",
      "Edit(~/.local/share/keyrings)",
      "Edit(~/.local/share/kwalletd)",
      "Edit(~/.local/share/networkmanagement)",
      "Edit(~/Movies)",
      "Edit(//mnt)",
      "Edit(~/Music)",
      "Edit(~/notes)",
      "Edit(package.json)",
      "Edit(package-lock.json)",
      "Edit(~/Pictures)",
      "Edit(pnpm-lock.yaml)",
      "Edit(~/Public)",
      "Edit(requirements.lock)",
      "Edit(requirements.txt)",
      "Edit(scripts)",
      "Edit(~/.ssh)",
      "Edit(~/Templates)",
      "Edit(~/Videos)",
      "Edit(//Volumes)",
      "Read(~/.cert)",
      "Read(~/data)",
      "Read(~/Desktop)",
      "Read(~/Documents)",
      "Read(~/Downloads)",
      "Read(//etc/NetworkManager)",
      "Read(//etc/ssh)",
      "Read(~/.gnupg)",
      "Read(~/.kde/share/apps/networkmanagement)",
      "Read(~/Library)",
      "Read(~/.local/share/certs)",
      "Read(~/.local/share/keyrings)",
      "Read(~/.local/share/kwalletd)",
      "Read(~/.local/share/networkmanagement)",
      "Read(~/Movies)",
      "Read(//mnt)",
      "Read(~/Music)",
      "Read(~/notes)",
      "Read(~/Pictures)",
      "Read(~/Public)",
      "Read(~/.ssh)",
      "Read(~/Templates)",
      "Read(~/Videos)",
      "Read(//Volumes)"
    ],
    "ask": ["Bash(rm *)"],
    "allow": ["Bash(ls *)"]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowedDomains": [],
      "allowUnixSockets": [],
      "allowLocalBinding": true
    },
    "excludedCommands": []
  }
}
