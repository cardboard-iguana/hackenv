{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Edit(.env)",
      "Edit(.envrc)",
      "Edit(flake.lock)",
      "Edit(flake.nix)",
      "Edit(Gemfile)",
      "Edit(Gemfile.lock)",
      "Edit(package.json)",
      "Edit(package-lock.json)",
      "Edit(pnpm-lock.yaml)",
      "Edit(requirements.lock)",
      "Edit(requirements.txt)",
      "Read(~/.cert)",
      "Read(~/data)",
      "Read(~/Desktop)",
      "Read(~/Documents)",
      "Read(~/Downloads)",
      "Read(.env)",
      "Read(//etc/NetworkManager)",
      "Read(//etc/ssh)",
      "Read(~/.gnupg)",
      "Read(~/.kde/share/apps/networkmanagement)",
      "Read(~/Library)",
      "Read(~/.local/share/certs)",
      "Read(~/.local/share/keyrings)",
      "Read(~/.local/share/kwalletd)",
      "Read(~/.local/share/networkmanagement)",
      "Read(~/Movies)",
      "Read(//mnt)",
      "Read(~/Music)",
      "Read(~/notes)",
      "Read(~/Pictures)",
      "Read(~/Public)",
      "Read(~/.ssh)",
      "Read(~/Templates)",
      "Read(~/Videos)",
      "Read(//Volumes)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [],
      "allowUnixSockets": [],
      "allowLocalBinding": true
    },
    "excludedCommands": []
  }
}
